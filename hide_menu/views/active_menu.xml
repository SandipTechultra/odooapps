<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="active_menu_view" model="ir.ui.view">
        <field name="name">active.menu</field>
        <field name="model">active.menu</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <notebook>
                        <page name="menu_line_ids" string="Menu Line">
                            <field name="menu_line_ids">
                                <tree string="Lines" editable="bottom">
                                    <field name="is_active" invisible="1"/>
                                    <field name="model_id"
                                           options="{'no_open': True,'no_edit':True,'no_create': True}"/>
                                    <field name="report_id"
                                           options="{'no_open': True,'no_edit':True,'no_create': True}"/>
                                    <field name="menu_id" invisible="1"
                                           options="{'no_open': True,'no_edit':True,'no_create': True}"/>
                                    <button name="active_menu"
                                            attrs="{'invisible':['|',('is_active','!=',True),('report_id','=',False)]}"
                                            class="btn-primary" type="object"
                                            string="Active"></button>
                                    <button name="deactive_menu"
                                            attrs="{'invisible':['|',('is_active','!=',False),('report_id','=',False)]}"
                                            class="btn-primary" type="object"
                                            string="Deactive"></button>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="active_menu_tree" model="ir.ui.view">
        <field name="name">active.menu</field>
        <field name="model">active.menu</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_active_menu" model="ir.actions.act_window">
        <field name="name">Active Menu</field>
        <field name="res_model">active.menu</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="active_menu_tree"/>
    </record>

    <menuitem id="active_menu_root"
              name="Menu Hide"
              sequence="10"/>

    <menuitem id="active_menu_sub"
              name="Active Menu"
              parent="active_menu_root"
              action="action_active_menu"
              sequence="1"/>
</odoo>
